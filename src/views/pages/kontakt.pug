block content
  section
    .container
      h2.section-title.text-shine Kontakt
      .row.g-4
        .col-12.col-md-5
          .contact-info
            .contact-block.mb-4
              h3.contact-label.text-shine= contact.order_hint
              p.contact-value Bestellungen nur per Telefon:
              p.contact-value
                a.contact-link(href='tel:' + contact.phone.replace(/\s/g, ''))= contact.phone
            .contact-block.mb-4
              h3.contact-label.text-shine Ã–ffnungszeiten
              p.contact-value= contact.hours
            .contact-block.mb-4
