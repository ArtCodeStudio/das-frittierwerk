extends ../layouts/main.pug

block content
  - const pageTitle = contact.title || 'Kontakt'
  section(id=slugify(pageTitle))
    .container
      h2.section-title.text-shine= pageTitle
      .row.g-4
        .col-12.col-md-5
          .contact-info
            .contact-block.mb-4
              h3.contact-label.text-shine= contact.order_hint
              p.contact-value= contact.label_order_phone || 'Bestellungen nur per Telefon'
              p.contact-value
                a.contact-link(href='tel:' + contact.phone.replace(/\s/g, ''))= contact.phone
            .contact-block.mb-4
              h3.contact-label.text-shine= contact.label_hours || 'Ã–ffnungszeiten'
              p.contact-value= contact.hours
            .contact-block.mb-4
              h3.contact-label.text-shine= contact.label_directions || 'Anfahrt'
              p.contact-value
                a.contact-link(href=contact.directions_url, target='_blank', rel='noopener noreferrer')= contact.address
        .col-12.col-md-7.px-0
          dfw-contact-map
