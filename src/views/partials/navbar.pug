          a.nav-link(href=basePath + '/ueber-uns.html')= site.nav && site.nav.ueber_uns ? site.nav.ueber_uns : 'Über uns'
        li.nav-item
          a.nav-link(href=basePath + '/qualitaet.html')= site.nav && site.nav.qualitaet ? site.nav.qualitaet : 'Qualität'
        li.nav-item
          a.nav-link(href=basePath + '/galerie.html')= site.nav && site.nav.galerie ? site.nav.galerie : 'Galerie'
        li.nav-item
          a.nav-link(href=basePath + '/kontakt.html')= site.nav && site.nav.kontakt ? site.nav.kontakt : 'Kontakt'
