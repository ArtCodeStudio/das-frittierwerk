.container
  h2.section-title Kontakt &amp; Anfahrt
  .row.g-4
    .col-12.col-md-5
      .contact-info
        .contact-block.mb-4
          h3.contact-label Adresse
          p.contact-value { contact.address }

        .contact-block.mb-4
          h3.contact-label Telefon
          p.contact-value
            a.contact-link(rv-href="'tel:' | append contact.phone") { contact.phone }

        .contact-block.mb-4(rv-if="contact.email")
          h3.contact-label E-Mail
          p.contact-value
            a.contact-link(rv-href="'mailto:' | append contact.email" rv-text="contact.email")

        .contact-block.mb-4(rv-if="contact.website")
          h3.contact-label Website
          p.contact-value
            a.contact-link(rv-href="'https://' | append contact.website" rv-text="contact.website" target="_blank" rel="noopener noreferrer")

        .contact-block.mb-4
          h3.contact-label Ã–ffnungszeiten
          p.contact-value { contact.hours }

        .contact-block.mb-4(rv-if="contact.order_hint")
          h3.contact-label Bestellung
          p.contact-value { contact.order_hint }
    .col-12.col-md-7
      #contact-map.contact-map
